.filters-bar {
  width: 100%;
  position: sticky;
  top: 0;
  height: 81rpx;
  z-index: 3;
  /* overflow: hidden; */
}

.dyt-list {
  margin-top: 0;
}
.dyt-list .am-list-item-thumb {
  border-radius: 5px;
}
.dyt-list .am-list-brief {
  color: #909090;
}

.dyt-list .am-list-extra {
  color: #000;
}

.disable-scroll {
  overflow: hidden;width: 100vw;height:calc(100vh - 81rpx);
}

.am-list-sticky {
  position: sticky;
  top: 0;
  background-color: #fff;
  z-index: 2;
}